<Page x:Class="SemestralProject.View.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
      xmlns:local="clr-namespace:SemestralProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">
    <StackPanel>
        <TextBox MaxLength="6" Margin="0,0,0,20">
            <ui:ControlHelper.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Contact" Margin="0,0,10,0"/>
                    <Label Content="Osobní číslo"/>
                </StackPanel>
            </ui:ControlHelper.Header>
        </TextBox>
        <PasswordBox>
            <ui:ControlHelper.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:SymbolIcon Symbol="Permissions" Margin="0,0,10,0"/>
                    <Label Content="Heslo"/>
                </StackPanel>
            </ui:ControlHelper.Header>
        </PasswordBox>
    </StackPanel>
</Page>
